{
    "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
    "tasks": [
        {
            "name": "format-check",
            "group": "pre-commit",
            "command": "dotnet",
            "args": [
                "fantomas",
                "--check",
                "${staged}"
            ],
            "include": [
                "**/*.fs",
                "**/*.fsx"
            ]
        },
        {
            "name": "commit-message-linter",
            "group": "commit-msg",
            "command": "dotnet",
            "args": [
                "dotnet",
                "fsi",
                ".husky/scripts/commit-lint.fsx",
                "--",
                "${args}"
            ]
        }
    ]
}
