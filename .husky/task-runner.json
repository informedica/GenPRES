{
    "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
    "tasks": [
        {
            "name": "format-check",
            "group": "pre-commit",
            "command": "dotnet",
            "args": [
                "fantomas",
                "--check",
                "${staged}"
            ],
            "include": [
                "**/*.fs",
                "**/*.fsx"
            ]
        }
    ]
}
